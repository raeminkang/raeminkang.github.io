---
---
[
  {% for post in site.posts %}
    {
      "title"    : "{{ post.title | escape }}",
      "category" : "{{ post.category }}",
      "tags"     : "{{ post.tags | join: ', ' }}",
      "url"      : "{{ site.url }}{{ post.url }}",
      "date"     : "{{ post.date }}",
      "type"     : "posts"
    },{% endfor %}{% for author in site.authors %}
    {
      "profileImageUrl"  : "{{ site.url }}/images/authors/{{ author.name }}/profile/{{ author.profileImage }}",
      "title"    : "{{ author.name }}",
      "url"      : "{{ site.url }}/authors/{{ author.name }}",
      "type"     : "authors"
    }{% unless forloop.last %},{% endunless %}{% endfor %}
]
